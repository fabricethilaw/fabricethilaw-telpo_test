<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="print"
        android:onClick="print"
        android:enabled="false"/>
    
    <Button 
        android:id="@+id/printtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="print txt"
        android:onClick="printtxt"
        android:enabled="false"/>
    
    <Button 
        android:id="@+id/printblack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="print black"
        android:onClick="printblack"
        android:enabled="false"/>
    
    <Button 
        android:id="@+id/getBatteryStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get BatteryStatus"
        android:onClick="getBatteryStatus"
        android:enabled="false"/>
    

</LinearLayout>
