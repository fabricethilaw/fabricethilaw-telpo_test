<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView 
        android:id="@+id/showText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>
    
    <Button 
        android:id="@+id/checkID"
        android:text="checkID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkID"/>
    
    <Button 
        android:id="@+id/checkIC"
        android:text="checkIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkIC"/>
    
    <Button 
        android:id="@+id/randomIC_ID"
        android:text="randomIC_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="randomIC_ID"/>

    
    
</LinearLayout>
